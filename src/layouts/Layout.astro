---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Cécile ROGER, Ostéopathe D.O. à Sion-les-Mines (44). Spécialisée nourrissons, femmes enceintes et adultes. Prenez rendez-vous en ligne." } = Astro.props;
