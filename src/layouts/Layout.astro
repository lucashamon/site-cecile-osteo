                            "address": {                              "@type": "PostalAddress",
                              "streetAddress": "2 rue de St Sulpice",
                              "addressLocality": "Sion-les-Mines",
                              "postalCode": "44590",
                              "addressCountry": "FR"
                            },                  "geo": {
                    "@type": "GeoCoordinates",
                    "latitude": 47.7333,
                    "longitude": -1.5833
                  },
                            "openingHoursSpecification": [
                              {
                                "@type": "OpeningHoursSpecification",
                                "dayOfWeek": [
                                  "Monday",
